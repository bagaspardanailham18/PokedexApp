<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="50dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/lottie_notfound_animation"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:visibility="visible"
        android:alpha="1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:lottie_rawRes="@raw/pokeball"
        app:lottie_autoPlay="true"
        app:lottie_loop="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Catching.."
        android:fontFamily="@font/poppinssemibold"
        app:layout_constraintEnd_toEndOf="@+id/lottie_notfound_animation"
        app:layout_constraintStart_toStartOf="@+id/lottie_notfound_animation"
        app:layout_constraintTop_toBottomOf="@+id/lottie_notfound_animation" />

</androidx.constraintlayout.widget.ConstraintLayout>